// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product_categories {
  id                 String               @id @default(uuid())
  name               String               @db.VarChar
  handle             String               @unique @db.VarChar
  image_uri          String?              @db.VarChar
  description        String?              @db.VarChar
  parent_category_id String?
  status             Int?                 @default(20) @db.SmallInt
  popular            Int?                 @default(20) @db.SmallInt
  metadata           Json?                @db.JsonB
  created_at         DateTime             @default(now())
  updated_at         DateTime             @updatedAt
  deleted_flg        Boolean              @default(false)
  parent_category    product_categories?  @relation("CategoryToCategory", fields: [parent_category_id], references: [id], onDelete: Cascade)
  category_children  product_categories[] @relation("CategoryToCategory")

  @@index([status, popular, parent_category_id])
}
